<mvc:View
	controllerName="sap.ui.demo.basicTemplate.controller.App"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m">
	<App>
		<pages>
			<Page
				id="page"
				title="{i18n>title}">
        <headerContent>
          <Button
             icon="sap-icon://hello-world"
             press="onOpenDialog"/>
          <Link text ="SAP Help Portal" 
                href="https://help.sap.com/viewer/index"  
                class="sapUiResponsiveMargin" 
                target="_blank"
                width="auto"/>
        </headerContent>
				<content>
          <mvc:XMLView viewName="sap.ui.demo.basicTemplate.view.InvoiceList"/>
        </content>
			</Page>
		</pages>
	</App>
</mvc:View>
{
	"_version": "1.21.0",
	"sap.app": {
		"id": "chuntian.resume",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"title": "{{appTitle}}",
		"description": "{{appDescription}}"
	},

	"sap.ui": {
		"technology": "UI5",
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		}
	},

  "sap.ui5": {
    "rootView": {
      "viewName": "chuntian.resume.view.App",
      "type": "XML",
      "async": true,
      "id": "app"
    },
    "dependencies": {
      "minUI5Version": "1.98.0",
      "libs": {
        "sap.ui.core": {},
        "sap.m": {},
        "sap.ui.layout": {}
      }
    },
    "contentDensities": {
      "compact": true,
      "cozy": true
    },
    "models": {
      "i18n": {
        "type": "sap.ui.model.resource.ResourceModel",
        "settings": {
          "bundleName": "chuntian.resume.i18n.i18n"
        }
      },
      "project": {
        "type": "sap.ui.model.json.JSONModel",
        "uri": "Project.json"
      }
    },
    "resources": {
      "css": [
        {
          "uri": "css/style.css"
        }
      ]
    },
    "routing": {
      "config": {
        "routerClass": "sap.m.routing.Router",
        "type": "View",
        "viewType": "XML",
        "path": "chuntian.resume.view",
        "controlId": "app",
        "controlAggregation": "pages",
        "bypassed": {
					"target": "notFound"
				},
        "transition": "slide",
        "async": true
      },
      "routes": [
        {
          "pattern": "",
          "name": "ResumeHome",
          "target": "ResumeHome"
        },
        {
          "pattern": "D10",
          "name": "D10",
          "target": "D10"
        },
        {
          "pattern": "C50",
          "name": "C50",
          "target": "C50"
        },
        {
          "pattern": "C40",
          "name": "C40",
          "target": "C40"
        },
        {
          "pattern": "Detail/{projectID}/resume:?query:",
          "name": "Detail",
          "target": "Detail"
        }
      ],
      "targets": {
        "ResumeHome": {
          "id": "ResumeHome",
          "path": "chuntian.resume.view",
          "name": "Resume",
          "level" : 1
        },
        "D10": {
          "id": "D10",
          "name": "D10",
          "path": "chuntian.resume.view.Project",
          "level" : 2
        },
        "C50": {
          "id": "C50",         
          "name": "C50",
          "path": "chuntian.resume.view.Project"
        },
        "C40": {
          "id": "C40",
          "name": "C40",
          "path": "chuntian.resume.view.Project"
        },
        "Detail": {
          "id": "Detail",
          "name": "Detail",
          "path": "chuntian.resume.view.Project",
          "transition": "flip",
          "level" : 2
        },
        "notFound": {
          "id": "notFound",
          "name": "NotFound",
          "transition": "show"
        },
        "resumeTabSkills": {
          "parent": "Detail",
          "id": "resumeSkills",
          "path": "chuntian.resume.view.Project",
          "name": "DetailSkills",
          "controlId": "skillsTab",
          "controlAggregation": "content",
          "level" : 3
        },
        "resumeTabOthers": {
          "parent": "Detail",
          "id": "resumeTabOthers",
          "path": "chuntian.resume.view.Project",
          "name": "DetailOthers",
          "controlId": "othersTab",
          "controlAggregation": "content",
          "level" : 3
        }
      }
    }
  }
}
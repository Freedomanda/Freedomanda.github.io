<mvc:View
   controllerName="chuntian.resume.controller.resume"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
  <Page
    id="page"
    title="{i18n>title}">
    <headerContent>
      <Button
         icon="sap-icon://account"
         press="onOpenDialog"/>
      <Link text ="Wu Changchun"
            href="https://sapui5.netweaver.ondemand.com/sdk/#/api"
            class="sapUiResponsiveMargin"
            target="_blank"
            width="auto"/>
    </headerContent>

    <content>
      <List
         id="Project"
         headerText="{i18n>projectTitle}"
         class="sapUiResponsiveMargin"
         width="auto"
         items="{path: 'project>/Project',
                     sorter:
                     {  path: 'Company',
                        descending: true,
                        group: true
                            }
                     }" >
        <headerToolbar>
          <Toolbar>
            <Title text="{i18n>projectTitle}"/>
            <ToolbarSpacer/>
            <SearchField width="50%" search="onFilterProject"/>
          </Toolbar>
        </headerToolbar>
        <items>
          <ObjectListItem
             title="{project>Name} : {project>Description}"
                number="{
			                  parts: [{path: 'project>Duration'}, {path: 'project>Unit'}],
			                  type: 'sap.ui.model.type.Unit',
			                  formatOptions: {
				                  showMeasure: false
			                  } }"
        numberUnit="{project>Unit}"
        numberState="{= ${project>Status} !== 'C' ? 'Error' : 'Success' }"
        type ="Navigation"
        press ="onPress">
            <firstStatus>
              <ObjectStatus text="{
                      path:'project>Date'
                      }"/>
            </firstStatus>
          </ObjectListItem>
        </items>
      </List>
    </content>
  </Page>

</mvc:View>
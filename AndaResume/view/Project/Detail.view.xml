<mvc:View
  controllerName="chuntian.resume.controller.Project.Detail"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  displayBlock="true">
  <Page title="{i18n>ProjectName} {project>Name}" showNavButton="true"  navButtonPress="onNavBack">
    <IconTabBar
    id="iconTabBar"
    headerBackgroundDesign="Transparent"
    class="sapUiResponsiveContentPadding"
    binding="{Resume}"
    select="onTabSelect"
    selectedKey="selectedTabKey">
      <items>
        <IconTabFilter id="summaryTab" text="Project Summary" key="Summany">
          <Text text="{project>Summary}" />
        </IconTabFilter>
        <IconTabFilter id="contributeTab" text="Contribution" key="Contribute">
          <Text text="{project>Contribution}" />
        </IconTabFilter>
        <IconTabFilter id="skillsTab" text="ABAP Skills Involved" key="Skills">
          <!-- place content via lazy loading -->
        </IconTabFilter>
        <IconTabFilter id="othersTab" text="Others" key="Others">
          <!-- place content via lazy loading -->
        </IconTabFilter>
      </items>
    </IconTabBar>
  </Page>
</mvc:View>
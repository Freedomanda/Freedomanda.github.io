<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:l="sap.ui.layout"
   xmlns:core="sap.ui.core" >
  <Dialog
     id="helloDialog"
     title="{i18n>dialogTitle}"
     draggable="true"
     class="sapUiResponsive"
     icon="sap-icon://add-contact">
  
    <content>
      <l:VerticalLayout>
        <l:content>
          <HBox>
            <Image class="sapUiResponsive sapUiResopnsiveMargin"
                          src="./source/wechat_anda.png"
                          alt="WeChat Account: freedomanda"
                          width="80%"
                          press="OnContact"></Image>
            <Image class="sapUiResponsiveRight sapUiResopnsiveMargin"
                    src="./source/qq_anda.png"
                    alt="QICQ Number: 604014016"
                    width="80%"
                    press="OnContact"></Image>
            </HBox>
          </l:content>
      </l:VerticalLayout>
    </content>
     
    <beginButton>
      <Button
         text="{i18n>dialogCloseButtonText}"
         press="onCloseDialog"/>
    </beginButton>
  </Dialog>
</core:FragmentDefinition>
            <SegmentedButtonItem text="2" key="MSI"  width="3rem"/>
            <SegmentedButtonItem text="1"   key="HND" class="sapUiResponsiveMargin" width="3rem"/>
          </items>
        </SegmentedButton>
      </Toolbar>
    </headerToolbar>
    <VBox class="sapUiSmallMargin">
      <f:SimpleForm id="jobinfo" editable ="false" layout ="ColumnLayout">
        <f:content>
          <Label id="companyLb" text="Company" />
